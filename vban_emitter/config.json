{
  "name": "VBAN Emitter",
  "version": "0.1.0",
  "slug": "vban_emitter",
  "description": "Streams audio from Home Assistant to VoiceMeeter via VBAN.",
  "url": "https://github.com/PBadchild/ha-vban-addon/tree/main/vban_emitter",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "startup": "services",
  "boot": "auto",
  "hassio_role": "default",
  "map": ["/tmp"],
  "ports": {
    "6980/udp": "VBAN Audio Stream"
  },
  "schema": {
    "VOICEMEETER_IP": {
      "title": "VoiceMeeter IP Address",
      "description": "IP of your VoiceMeeter PC (e.g., 192.168.1.100)",
      "type": "str",
      "default": "127.0.0.1"
    },
    "VBAN_PORT": {
      "title": "VBAN UDP Port",
      "description": "Port for VBAN audio stream",
      "type": "int",
      "default": 6980
    },
    "VBAN_STREAM_NAME": {
      "title": "VBAN Stream Name",
      "description": "Name for the stream in VoiceMeeter (e.g., 'music_assistant')",
      "type": "str",
      "default": "music_assistant"
    }
  },
  "full_time": false,
  "privileged": false,
  "host_network": true,
  "audio": true,
  "devices": []
}